# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

# Primary displays
bar {
    i3bar_command i3bar --transparency
    id 0

    padding 4px 0 0 0

    # status_command /home/zmenciso/.local/bin/bumblebee-status -m \
    #     load memory amixer battery dunstctl date time \
    #     -p time.format="%H:%M" date.format="%Y-%m-%d" memory.format="{used}" \
    #     -t moonfly-powerline

    status_command i3status

    # height 26
    tray_padding 8
    output $primary
    position top
    tray_output $primary
    strip_workspace_numbers yes
    strip_workspace_name no

    separator_symbol "  "
    font pango:BlexMono Nerd Font 10

    colors {
	# <colorclass> <border> <background> <text>
	background $bg_tr
	statusline $fgbr
	separator $black
	focused_workspace $bg_tr $blue $bg_tr
	active_workspace $bg_tr $yellow $bg_tr
	inactive_workspace $bg_tr $bg_tr $fgbr
	urgent_workspace $bg_tr $red $bg_tr
	binding_mode $bg_tr $bg_tr $fgbr
    }
}

# Secondary displays
bar {
    i3bar_command i3bar --transparency
    id 1

    padding 4px 0 0 0

    # status_command /home/zmenciso/.local/bin/bumblebee-status -m \
    #     date time \
    #     -p time.format="%H:%M" date.format="%Y-%m-%d" \
    #     -t moonfly-powerline-small

    status_command i3status --config ~/.config/i3status/config-small

    # height 26
    output $secondary
    position top
    tray_output none
    strip_workspace_numbers yes
    strip_workspace_name no

    separator_symbol "  "
    font pango:BlexMono Nerd Font 11

    colors {
	# <colorclass> <border> <background> <text>
	background $bg_tr
	statusline $fgbr
	separator $black
	focused_workspace $bg_tr $blue $bg_tr
	active_workspace $bg_tr $yellow $bg_tr
	inactive_workspace $bg_tr $bg_tr $fgbr
	urgent_workspace $bg_tr $red $bg_tr
	binding_mode $bg_tr $bg_tr $fgbr
    }
}

